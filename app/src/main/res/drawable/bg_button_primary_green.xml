<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active/Enabled State: Slightly darker with border -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="@color/button_primary_green_active" />
            <stroke
                android:width="2dp"
                android:color="@color/button_primary_green_border" />
        </shape>
    </item>
    <!-- Inactive/Disabled State: Brighter -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="@color/button_primary_green_inactive" />
        </shape>
    </item>
</selector>
