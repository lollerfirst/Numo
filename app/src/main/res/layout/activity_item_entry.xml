<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white"
    android:orientation="vertical">

    <!-- Custom Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/color_bg_white"
        android:paddingHorizontal="@dimen/space_m">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_close"
            android:tint="@color/color_text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textAppearance="@style/Text.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/item_save_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAppearance="@style/Text.Button"
            android:textColor="@color/color_primary_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_m">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_l"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/space_m"
                    app:cardCornerRadius="@dimen/radius_l"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/item_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_bg_secondary"
                        android:contentDescription="Item image"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/item_image_placeholder"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:contentDescription="No image"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="@color/color_icon_secondary" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/item_add_image_button"
                        style="@style/Widget.Button.Secondary.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_s"
                        android:text="Add Image" />

                    <Button
                        android:id="@+id/item_remove_image_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textAppearance="@style/Text.Button"
                        android:textColor="@color/color_warning_red"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="Item Name"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:hint="Item Name"
                android:inputType="text"
                android:padding="@dimen/space_m"
                android:textAppearance="@style/Text.Body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="Price"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_price_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:padding="@dimen/space_m"
                android:textAppearance="@style/Text.Body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="Quantity"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_quantity_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:hint="0"
                android:inputType="number"
                android:padding="@dimen/space_m"
                android:text="0"
                android:textAppearance="@style/Text.Body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="Variation (Optional)"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_variation_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:hint="e.g. Small, Large"
                android:inputType="text"
                android:padding="@dimen/space_m"
                android:textAppearance="@style/Text.Body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="SKU (Optional)"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_sku_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:hint="SKU"
                android:inputType="text"
                android:padding="@dimen/space_m"
                android:textAppearance="@style/Text.Body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="Description (Optional)"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="@dimen/space_m"
                android:textAppearance="@style/Text.Body" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_xs"
                android:text="Category (Optional)"
                android:textAppearance="@style/Text.BodyBold" />

            <EditText
                android:id="@+id/item_category_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:background="@drawable/bg_search_bar"
                android:hint="Category"
                android:inputType="text"
                android:padding="@dimen/space_m"
                android:textAppearance="@style/Text.Body" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_m"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/item_alert_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Alert"
                    android:textAppearance="@style/Text.Body" />

                <EditText
                    android:id="@+id/item_alert_threshold_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_m"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_bar"
                    android:enabled="false"
                    android:hint="Threshold"
                    android:inputType="number"
                    android:padding="@dimen/space_m"
                    android:text="5"
                    android:textAppearance="@style/Text.Body" />
            </LinearLayout>

            <Button
                android:id="@+id/item_cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_s"
                android:text="Cancel"
                android:textAppearance="@style/Text.Button"
                android:textColor="@color/color_warning_red" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
