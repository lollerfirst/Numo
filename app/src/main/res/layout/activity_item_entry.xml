<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_secondary"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_bg_white"
        android:elevation="1dp"
        android:paddingHorizontal="4dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_chevron_back"
            app:tint="@color/color_text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textAppearance="@style/Text.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/item_save_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAppearance="@style/Text.Button"
            android:textColor="@color/color_primary_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="24dp">

            <!-- ==================== IMAGE SECTION ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/item_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_bg_white"
                        android:contentDescription="Item image"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/item_image_placeholder"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:contentDescription="No image"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="@color/color_icon_secondary" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/item_add_image_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Add Photo"
                    android:textColor="@color/color_primary_green"
                    android:textSize="15sp"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/item_remove_image_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Remove Photo"
                    android:textColor="@color/color_warning_red"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- ==================== BASIC INFO SECTION ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:text="BASIC INFORMATION"
                android:textAppearance="@style/Text.SectionHeader" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <!-- Item Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_primary" />

                        <EditText
                            android:id="@+id/item_name_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Item Name"
                            android:inputType="textCapWords"
                            android:textAppearance="@style/Text.Body"
                            android:textColorHint="@color/color_text_tertiary" />
                    </LinearLayout>

                    <!-- Variation (moved before Category) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Variation"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_primary" />

                        <EditText
                            android:id="@+id/item_variation_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="e.g. Small, Large"
                            android:inputType="textCapWords"
                            android:textAppearance="@style/Text.Body"
                            android:textColorHint="@color/color_text_tertiary" />
                    </LinearLayout>

                    <!-- Description -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:minHeight="80dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_primary" />

                        <EditText
                            android:id="@+id/item_description_input"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Optional"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="2"
                            android:textAppearance="@style/Text.Body"
                            android:textColorHint="@color/color_text_tertiary" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ==================== CATEGORY SECTION (Tag-based) ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:text="CATEGORY"
                android:textAppearance="@style/Text.SectionHeader" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Category Tags Flow Layout -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/category_tags_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap="wrap"
                        app:alignItems="flex_start"
                        app:justifyContent="flex_start">

                        <!-- Tags will be added programmatically -->

                    </com.google.android.flexbox.FlexboxLayout>

                    <!-- New Category Input (hidden by default) -->
                    <LinearLayout
                        android:id="@+id/new_category_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/new_category_input"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_field_rounded"
                            android:hint="New category name"
                            android:inputType="textCapWords"
                            android:paddingHorizontal="12dp"
                            android:textSize="15sp"
                            android:textColorHint="@color/color_text_tertiary" />

                        <ImageButton
                            android:id="@+id/btn_confirm_category"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_circle_green"
                            android:contentDescription="Confirm"
                            android:src="@drawable/ic_check"
                            app:tint="@color/color_bg_white" />

                        <ImageButton
                            android:id="@+id/btn_cancel_category"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Cancel"
                            android:src="@drawable/ic_close"
                            app:tint="@color/color_text_secondary" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hidden category input for compatibility -->
            <EditText
                android:id="@+id/item_category_input"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="24dp"
                android:text="Select an existing category or create a new one."
                android:textAppearance="@style/Text.Caption" />

            <!-- ==================== PRICING SECTION ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:text="PRICING"
                android:textAppearance="@style/Text.SectionHeader" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Price Type Toggle -->
                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/price_type_toggle"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_price_fiat"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Fiat"
                            android:textAllCaps="false"
                            android:textSize="15sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_price_bitcoin"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Bitcoin"
                            android:textAllCaps="false"
                            android:textSize="15sp" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <!-- Fiat Price Input -->
                    <LinearLayout
                        android:id="@+id/fiat_price_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/currency_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="24sp"
                            android:textColor="@color/color_text_primary"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/item_price_input"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_field_rounded"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:paddingHorizontal="16dp"
                            android:textSize="20sp"
                            android:textColor="@color/color_text_primary"
                            android:textColorHint="@color/color_text_tertiary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/currency_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USD"
                            android:textSize="15sp"
                            android:textColor="@color/color_text_secondary"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Bitcoin (Sats) Price Input -->
                    <LinearLayout
                        android:id="@+id/sats_price_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¿"
                            android:textSize="24sp"
                            android:textColor="@color/color_bitcoin_orange"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/item_sats_input"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_input_field_rounded"
                            android:hint="0"
                            android:inputType="number"
                            android:paddingHorizontal="16dp"
                            android:textSize="20sp"
                            android:textColor="@color/color_text_primary"
                            android:textColorHint="@color/color_text_tertiary"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sats"
                            android:textSize="15sp"
                            android:textColor="@color/color_text_secondary"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- VAT Section (shown when Fiat is selected) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/vat_section_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <!-- Apply VAT Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Apply VAT"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_primary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_vat_enabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- VAT Fields Container (shown when VAT enabled) -->
                    <LinearLayout
                        android:id="@+id/vat_fields_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:divider="@drawable/divider_horizontal"
                        android:showDividers="middle">

                        <!-- Price includes VAT toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:minHeight="50dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Price includes VAT"
                                android:textAppearance="@style/Text.Body"
                                android:textColor="@color/color_text_primary" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switch_price_includes_vat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <!-- VAT Rate Manual Input -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:minHeight="50dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="VAT Rate"
                                android:textAppearance="@style/Text.Body"
                                android:textColor="@color/color_text_primary" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/bg_vat_input">

                                <EditText
                                    android:id="@+id/vat_rate_input"
                                    android:layout_width="48dp"
                                    android:layout_height="36dp"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:hint="20"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_text_primary"
                                    android:textColorHint="@color/color_text_tertiary"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:textSize="16sp"
                                    android:textColor="@color/color_text_secondary"
                                    android:layout_marginEnd="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hidden spinner for compatibility -->
            <Spinner
                android:id="@+id/spinner_vat_rate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Price Breakdown (shown when VAT enabled) -->
            <LinearLayout
                android:id="@+id/price_breakdown_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/bg_price_breakdown"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Breakdown"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_secondary"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp" />

                <!-- Net Price Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Net Price (excl. VAT)"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_secondary" />

                    <TextView
                        android:id="@+id/text_net_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_primary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- VAT Amount Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/text_vat_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="VAT (20%)"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_secondary" />

                    <TextView
                        android:id="@+id/text_vat_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_primary"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_divider"
                    android:layout_marginBottom="12dp" />

                <!-- Gross Price Row (Total) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total (incl. VAT)"
                        android:textSize="16sp"
                        android:textColor="@color/color_text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/text_gross_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="18sp"
                        android:textColor="@color/color_primary_green"
                        android:fontFamily="sans-serif-bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="24dp"
                android:text="Set a fixed price in your preferred currency. Bitcoin prices are in satoshis (sats)."
                android:textAppearance="@style/Text.Caption" />

            <!-- ==================== SKU / BARCODE SECTION ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:text="IDENTIFICATION"
                android:textAppearance="@style/Text.SectionHeader" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_bg_white">

                <LinearLayout
                    android:id="@+id/sku_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:minHeight="50dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="SKU"
                        android:textAppearance="@style/Text.Body"
                        android:textColor="@color/color_text_primary" />

                    <EditText
                        android:id="@+id/item_sku_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Enter or scan barcode"
                        android:inputType="text"
                        android:textAppearance="@style/Text.Body"
                        android:textColorHint="@color/color_text_tertiary" />

                    <ImageButton
                        android:id="@+id/btn_scan_barcode"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Scan barcode"
                        android:src="@drawable/ic_barcode_scan"
                        app:tint="@color/color_primary_green" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SKU Error Message -->
            <TextView
                android:id="@+id/sku_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp"
                android:text="This SKU already exists"
                android:textSize="13sp"
                android:textColor="@color/color_warning_red"
                android:visibility="gone" />

            <!-- ==================== INVENTORY SECTION ==================== -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:text="INVENTORY"
                android:textAppearance="@style/Text.SectionHeader" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <!-- Track Inventory Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:minHeight="50dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Track Quantity"
                            android:textAppearance="@style/Text.Body"
                            android:textColor="@color/color_text_primary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_track_inventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Inventory Fields Container (shown when tracking enabled) -->
                    <LinearLayout
                        android:id="@+id/inventory_fields_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:divider="@drawable/divider_horizontal"
                        android:showDividers="middle">

                        <!-- Quantity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:minHeight="50dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Current Stock"
                                android:textAppearance="@style/Text.Body"
                                android:textColor="@color/color_text_primary" />

                            <EditText
                                android:id="@+id/item_quantity_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="end"
                                android:hint="0"
                                android:inputType="number"
                                android:textAppearance="@style/Text.Body"
                                android:textColorHint="@color/color_text_tertiary" />
                        </LinearLayout>

                        <!-- Low Stock Alert Toggle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:minHeight="50dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Low Stock Alert"
                                android:textAppearance="@style/Text.Body"
                                android:textColor="@color/color_text_primary" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/item_alert_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <!-- Alert Threshold (shown when alerts enabled) -->
                        <LinearLayout
                            android:id="@+id/alert_threshold_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:minHeight="50dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Alert When Below"
                                android:textAppearance="@style/Text.Body"
                                android:textColor="@color/color_text_primary" />

                            <EditText
                                android:id="@+id/item_alert_threshold_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="end"
                                android:hint="5"
                                android:inputType="number"
                                android:text="5"
                                android:textAppearance="@style/Text.Body"
                                android:textColorHint="@color/color_text_tertiary" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="32dp"
                android:text="Enable inventory tracking to monitor stock levels and receive low stock alerts."
                android:textAppearance="@style/Text.Caption" />

            <!-- ==================== DELETE BUTTON (Edit mode only) ==================== -->
            <Button
                android:id="@+id/item_cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp"
                android:text="Cancel"
                android:textAppearance="@style/Text.Button"
                android:textColor="@color/color_text_secondary" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
