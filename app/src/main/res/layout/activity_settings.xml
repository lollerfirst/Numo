<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white"
    tools:context=".SettingsActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_bg_white"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_close"
            android:tint="@color/color_text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textAppearance="@style/Text.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Currency Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:text="PREFERRED CURRENCY"
                android:textAppearance="@style/Text.SectionHeader" />

            <RadioGroup
                android:id="@+id/currency_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- USD -->
                <RadioButton
                    android:id="@+id/radio_usd"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="@color/color_primary_green"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:text="US Dollar (USD)"
                    android:textAppearance="@style/Text.BodyBold" />

                <!-- EUR -->
                <RadioButton
                    android:id="@+id/radio_eur"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="@color/color_primary_green"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:text="Euro (EUR)"
                    android:textAppearance="@style/Text.BodyBold" />

                <!-- GBP -->
                <RadioButton
                    android:id="@+id/radio_gbp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="@color/color_primary_green"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:text="British Pound (GBP)"
                    android:textAppearance="@style/Text.BodyBold" />

                <!-- JPY -->
                <RadioButton
                    android:id="@+id/radio_jpy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?attr/selectableItemBackground"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="@color/color_primary_green"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:text="Japanese Yen (JPY)"
                    android:textAppearance="@style/Text.BodyBold" />
            </RadioGroup>

            <!-- Mints Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="4dp"
                android:text="ALLOWED MINTS"
                android:textAppearance="@style/Text.SectionHeader" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mints_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Add Mint -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/new_mint_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_field"
                    android:hint="Add mint URL"
                    android:inputType="textUri"
                    android:paddingHorizontal="16dp"
                    android:textAppearance="@style/Text.Body"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/add_mint_button"
                    style="@style/Widget.Button.Secondary.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:minHeight="40dp"
                    android:text="Add" />
            </LinearLayout>

            <TextView
                android:id="@+id/reset_mints_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Reset to Defaults"
                android:textAppearance="@style/Text.Link" />

            <!-- Items Section -->
            <include
                android:id="@+id/items_section"
                layout="@layout/section_items_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        style="@style/Widget.Button.Primary.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="Save Changes"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
