<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white"
    tools:context=".SettingsActivity">

    <!-- Custom Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/color_bg_white"
        android:paddingHorizontal="@dimen/space_m"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_close"
            android:tint="@color/color_text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textAppearance="@style/Text.Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        app:layout_constraintTop_toBottomOf="@id/toolbar_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_2xl">

            <!-- Settings Title (Hidden in ScrollView as it's now in Toolbar) -->
            <TextView
                android:id="@+id/settings_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- Currency section -->
            <TextView
                android:id="@+id/currency_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_xl"
                android:text="Preferred Currency"
                android:textAppearance="@style/Text.Heading1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/currency_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_xs"
                android:text="Select the currency you want to use for Bitcoin conversions"
                android:textAppearance="@style/Text.Body" />

            <!-- Radio button group for currency selection -->
            <RadioGroup
                android:id="@+id/currency_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_m">

                <RadioButton
                    android:id="@+id/radio_usd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/color_primary_green"
                    android:checked="true"
                    android:paddingStart="@dimen/space_s"
                    android:paddingEnd="@dimen/space_s"
                    android:text="US Dollar (USD)"
                    android:textAppearance="@style/Text.Body"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_eur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/color_primary_green"
                    android:paddingStart="@dimen/space_s"
                    android:paddingEnd="@dimen/space_s"
                    android:text="Euro (EUR)"
                    android:textAppearance="@style/Text.Body"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_gbp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/color_primary_green"
                    android:paddingStart="@dimen/space_s"
                    android:paddingEnd="@dimen/space_s"
                    android:text="British Pound (GBP)"
                    android:textAppearance="@style/Text.Body"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_jpy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/color_primary_green"
                    android:paddingStart="@dimen/space_s"
                    android:paddingEnd="@dimen/space_s"
                    android:text="Japanese Yen (JPY)"
                    android:textAppearance="@style/Text.Body"
                    android:textSize="16sp" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_l"
                android:background="@color/color_divider" />

            <!-- Mints section -->
            <TextView
                android:id="@+id/mints_section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_xl"
                android:text="Allowed Mints"
                android:textAppearance="@style/Text.Heading1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mints_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_xs"
                android:text="Manage the list of trusted Cashu mints"
                android:textAppearance="@style/Text.Body" />

            <!-- Mints RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mints_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_m" />

            <!-- Add mint layout -->
            <LinearLayout
                android:id="@+id/add_mint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_m"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/new_mint_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search_bar"
                    android:hint="Enter mint URL"
                    android:inputType="textUri"
                    android:minHeight="@dimen/button_height"
                    android:padding="@dimen/space_m"
                    android:textAppearance="@style/Text.Body" />

                <Button
                    android:id="@+id/add_mint_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginStart="@dimen/space_s"
                    android:background="@drawable/bg_button_secondary_outlined"
                    android:text="Add"
                    android:textAppearance="@style/Text.Button"
                    android:textColor="@color/color_text_primary" />
            </LinearLayout>

            <!-- Reset mints button -->
            <Button
                android:id="@+id/reset_mints_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/space_m"
                android:layout_marginEnd="@dimen/margin_content_horizontal"
                android:text="Reset to Defaults"
                android:textColor="@color/color_primary_green" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginHorizontal="@dimen/margin_content_horizontal"
                android:layout_marginTop="@dimen/space_l"
                android:background="@color/color_divider" />

            <!-- Items section -->
            <include
                android:id="@+id/items_section"
                layout="@layout/section_items_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_l" />

        </LinearLayout>
    </ScrollView>

    <!-- Save button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginHorizontal="@dimen/margin_screen_horizontal"
        android:layout_marginBottom="@dimen/space_xl"
        android:background="@drawable/bg_button_primary_green"
        android:text="Save Changes"
        android:textAppearance="@style/Text.Button"
        android:textColor="@color/color_bg_white"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
