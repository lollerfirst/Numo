<?xml version="1.0" encoding="utf-8"?>
<!-- Full screen container with scrim background -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_scrim">

    <!-- Bottom Sheet Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_s"
        android:paddingBottom="@dimen/space_2xl">

        <!-- Handle Bar -->
        <View
            android:layout_width="@dimen/bottom_sheet_handle_width"
            android:layout_height="@dimen/bottom_sheet_handle_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_xl"
            android:background="@drawable/bg_bottom_sheet_handle" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_xl"
            android:text="@string/nfc_dialog_title_scan_to_pay"
            android:textAppearance="@style/Text.Title" />

        <!-- NFC Card Indicator -->
        <FrameLayout
            android:id="@+id/card_container"
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_2xl"
            android:background="@drawable/nfc_payment_background_rect">

            <!-- Icons displayed vertically in center -->
            <LinearLayout
                android:id="@+id/payment_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Contactless icon rotated to point upward -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="@dimen/space_xl"
                    android:contentDescription="@string/nfc_dialog_content_description_contactless"
                    android:rotation="270"
                    android:src="@drawable/contactless" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/nfc_dialog_content_description_cashu"
                    android:src="@drawable/cashu" />
            </LinearLayout>
        </FrameLayout>

        <!-- QR Code Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_l"
            android:text="@string/nfc_dialog_subtitle_or_scan_qr"
            android:textAppearance="@style/Text.Caption" />

        <!-- QR Code Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/qr_card"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space_2xl"
            app:cardCornerRadius="@dimen/radius_card"
            app:cardElevation="@dimen/elevation_card">

            <ImageView
                android:id="@+id/payment_request_qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/payment_request_qr_description"
                android:padding="@dimen/space_l"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <!-- Cancel Button - Green Pill -->
        <Button
            android:id="@+id/nfc_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginHorizontal="@dimen/margin_screen_horizontal"
            android:background="@drawable/bg_button_primary_green"
            android:text="@string/common_cancel"
            android:textAppearance="@style/Text.Button"
            android:textColor="@color/color_bg_white" />

    </LinearLayout>

</FrameLayout>
