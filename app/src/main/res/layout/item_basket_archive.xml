<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/color_divider"
    app:cardBackgroundColor="@color/color_bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Name + Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Paid badge -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basket_archive_paid_badge"
                android:textColor="@color/color_bg_white"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_badge_success"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/basket_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_text_primary"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Table 5" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/basket_archive_delete"
                android:src="@drawable/ic_trash"
                app:tint="@color/color_text_tertiary" />

        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/basket_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_text_tertiary"
            android:textSize="13sp"
            tools:text="Mar 15, 2024 at 2:30 PM" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@color/color_divider" />

        <!-- Items Summary -->
        <TextView
            android:id="@+id/basket_items_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_secondary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            tools:text="2 × Coffee, 1 × Sandwich + 1 more" />

        <!-- Total + Item Count Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/basket_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_text_primary"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                tools:text="$12.50" />

            <TextView
                android:id="@+id/basket_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_tertiary"
                android:textSize="13sp"
                tools:text="4 items" />

        </LinearLayout>

        <!-- View Payment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_payment_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:text="@string/basket_archive_view_payment"
            android:textColor="@color/color_accent_blue"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/color_bg_secondary"
            app:cornerRadius="12dp"
            app:rippleColor="@color/color_accent_blue"
            app:strokeWidth="0dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
