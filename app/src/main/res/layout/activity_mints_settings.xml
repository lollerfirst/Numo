<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_light">

    <!-- Sticky Top Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_light"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/common_back"
                android:src="@drawable/ic_chevron_back"
                app:tint="@color/color_text_primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mints_explore_title"
                android:textSize="17sp"
                android:textColor="@color/color_text_primary"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/reset_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/mints_reset_description"
                android:src="@drawable/ic_refresh"
                app:tint="@color/color_text_tertiary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Lightning Mint Section -->
            <LinearLayout
                android:id="@+id/lightning_mint_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:visibility="gone">

                <!-- Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/mints_lightning_mint"
                    android:textSize="13sp"
                    android:textColor="@color/color_text_secondary"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <!-- Lightning Mint Hero Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/lightning_mint_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/color_bg_white"
                    app:rippleColor="@color/color_ripple">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <!-- Lightning Icon Badge -->
                        <FrameLayout
                            android:id="@+id/lightning_icon_container"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_lightning_badge"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/lightning_mint_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bitcoin"
                                android:contentDescription="@string/cd_mint_icon" />

                        </FrameLayout>

                        <!-- Lightning indicator -->
                        <ImageView
                            android:id="@+id/lightning_indicator"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_lightning_badge"
                            app:layout_constraintEnd_toEndOf="@id/lightning_icon_container"
                            app:layout_constraintBottom_toBottomOf="@id/lightning_icon_container"
                            android:translationX="6dp"
                            android:translationY="6dp" />

                        <!-- Mint Name -->
                        <TextView
                            android:id="@+id/lightning_mint_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="Lightning Mint"
                            android:textSize="18sp"
                            android:textColor="@color/color_text_primary"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/lightning_icon_container"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/lightning_icon_container"
                            app:layout_constraintBottom_toTopOf="@id/lightning_mint_url" />

                        <!-- Mint URL -->
                        <TextView
                            android:id="@+id/lightning_mint_url"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="mint.example.com"
                            android:textSize="13sp"
                            android:textColor="@color/color_text_tertiary"
                            android:fontFamily="sans-serif"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/lightning_icon_container"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lightning_mint_name"
                            app:layout_constraintBottom_toBottomOf="@id/lightning_icon_container" />

                        <!-- Divider -->
                        <View
                            android:id="@+id/lightning_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/color_divider"
                            app:layout_constraintTop_toBottomOf="@id/lightning_icon_container" />

                        <!-- Balance Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@id/lightning_divider">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mints_balance"
                                android:textSize="14sp"
                                android:textColor="@color/color_text_secondary" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/lightning_mint_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¿0"
                                android:textSize="17sp"
                                android:textColor="@color/color_text_primary"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Description -->
                        <TextView
                            android:id="@+id/lightning_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:text="@string/mints_lightning_description"
                            android:textSize="12sp"
                            android:textColor="@color/color_text_tertiary"
                            android:lineSpacingMultiplier="1.3"
                            app:layout_constraintTop_toBottomOf="@id/lightning_divider" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- All Mints Section Header -->
            <TextView
                android:id="@+id/all_mints_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/mints_all_mints"
                android:textSize="13sp"
                android:textColor="@color/color_text_secondary"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:letterSpacing="0.05" />

            <!-- Mints Container (dynamically populated) -->
            <LinearLayout
                android:id="@+id/mints_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Add Mint Card -->
            <com.electricdreams.numo.ui.components.AddMintInputCard
                android:id="@+id/add_mint_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="40dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_bitcoin"
                    android:alpha="0.3"
                    app:tint="@color/color_text_tertiary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/mints_empty_title"
                    android:textSize="17sp"
                    android:textColor="@color/color_text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/mints_empty_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/color_text_secondary"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
