<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_bg_white">

    <!-- Main Content Row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackground">

        <!-- Item Image - Apple-style rounded square -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_container"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/color_bg_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/item_selection_image_description"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_image_placeholder"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@string/item_selection_image_placeholder"
                android:src="@drawable/ic_image_placeholder"
                app:tint="@color/color_icon_tertiary" />
        </androidx.cardview.widget.CardView>

        <!-- Text Content -->
        <LinearLayout
            android:id="@+id/text_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quantity_controls"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Item Name -->
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_text_primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                tools:text="Classic T-Shirt" />

            <!-- Item Variation (grey, smaller) -->
            <TextView
                android:id="@+id/item_variation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_text_tertiary"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Medium / Navy Blue"
                tools:visibility="visible" />

            <!-- Price -->
            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_text_secondary"
                android:textSize="14sp"
                tools:text="$24.99" />

            <!-- Stock indicator (if tracking inventory) -->
            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_text_tertiary"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="12 in stock" />

            <!-- Hidden fields for compatibility -->
            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Quantity Controls -->
        <LinearLayout
            android:id="@+id/quantity_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/decrease_quantity_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:background="@drawable/bg_quantity_button"
                android:src="@drawable/ic_minus"
                app:tint="@color/color_text_primary"
                android:scaleType="fitCenter"
                android:contentDescription="@string/item_selection_decrease_quantity" />

            <TextView
                android:id="@+id/basket_quantity"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_text_primary"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/increase_quantity_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:background="@drawable/bg_quantity_button"
                android:src="@drawable/ic_plus"
                app:tint="@color/color_text_primary"
                android:scaleType="fitCenter"
                android:contentDescription="@string/item_selection_increase_quantity" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Custom Variation Input (Initially hidden, expands on long-press) -->
    <LinearLayout
        android:id="@+id/variation_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/color_bg_secondary"
        android:paddingStart="90dp"
        android:paddingEnd="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="14dp"
        tools:visibility="visible">

        <!-- Subtle top border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/color_divider" />

        <!-- Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Variation Input Field -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_variation_input"
                android:gravity="center_vertical"
                android:paddingHorizontal="14dp">

                <EditText
                    android:id="@+id/variation_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/item_selection_variation_hint"
                    android:imeOptions="actionDone"
                    android:inputType="text|textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/color_text_primary"
                    android:textColorHint="@color/color_text_tertiary"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Add Variation Button -->
            <TextView
                android:id="@+id/add_variation_button"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingHorizontal="18dp"
                android:gravity="center"
                android:text="@string/item_selection_add_variation"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_add_variation_button" />

        </LinearLayout>

        <!-- Hint text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/item_selection_variation_helper"
            android:textColor="@color/color_text_tertiary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="90dp"
        android:background="@color/color_divider" />

</LinearLayout>
