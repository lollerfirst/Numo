<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_bg_white"
        android:elevation="1dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_back"
            android:contentDescription="@string/common_back"
            android:padding="12dp"
            app:tint="@color/color_text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basket_receipt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/print_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_print"
            android:contentDescription="@string/basket_receipt_print_content_description"
            android:padding="12dp"
            app:tint="@color/color_primary_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Hero Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingHorizontal="24dp">

                <!-- Receipt Icon -->
                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_circle_green">

                    <ImageView
                        android:id="@+id/hero_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_receipt"
                        app:tint="@android:color/white" />

                </FrameLayout>

                <!-- Total Amount (Large) -->
                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="42sp"
                    android:textColor="@color/color_text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.02"
                    tools:text="$74.97" />

                <!-- Subtitle with VAT info -->
                <TextView
                    android:id="@+id/total_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_text_tertiary"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="incl. $12.49 VAT" />

                <!-- Date/Time -->
                <TextView
                    android:id="@+id/checkout_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_text_secondary"
                    tools:text="Nov 26, 2024 at 2:30 PM" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="28dp"
                android:background="@color/color_divider" />

            <!-- Items Section Header -->
            <TextView
                android:id="@+id/items_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_text_secondary"
                android:letterSpacing="0.08"
                android:text="ITEMS"
                tools:text="3 ITEMS" />

            <!-- Items List Container -->
            <LinearLayout
                android:id="@+id/items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_rounded_card_large"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Items will be added programmatically -->

            </LinearLayout>

            <!-- Totals Section -->
            <LinearLayout
                android:id="@+id/totals_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_rounded_card_large"
                android:padding="16dp">

                <!-- Subtotal Row (Net) -->
                <LinearLayout
                    android:id="@+id/subtotal_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/subtotal_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_secondary"
                        android:text="@string/basket_receipt_subtotal_label" />

                    <TextView
                        android:id="@+id/subtotal_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_text_secondary"
                        tools:text="$62.48" />

                </LinearLayout>

                <!-- VAT Breakdown Container -->
                <LinearLayout
                    android:id="@+id/vat_breakdown_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <!-- VAT rows will be added programmatically -->

                </LinearLayout>

                <!-- Sats Items Row (for mixed baskets) -->
                <LinearLayout
                    android:id="@+id/sats_items_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textColor="@color/color_text_secondary"
                            android:text="@string/basket_receipt_bitcoin_items_label" />

                        <TextView
                            android:id="@+id/sats_items_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/color_text_secondary"
                            tools:text="₿50,000" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/sats_items_equiv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_text_tertiary"
                        android:gravity="end"
                        android:visibility="gone"
                        tools:text="≈ $50.00" />

                </LinearLayout>

                <!-- Divider before total -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_divider" />

                <!-- Final Total Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/final_total_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:textColor="@color/color_text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/basket_receipt_total_label" />

                    <TextView
                        android:id="@+id/final_total_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/color_text_primary"
                        android:fontFamily="sans-serif-medium"
                        tools:text="$74.97" />

                </LinearLayout>

                <!-- Sats Equivalent (if applicable) -->
                <TextView
                    android:id="@+id/sats_equivalent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_text_tertiary"
                    android:gravity="end"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="≈ ₿74,970" />

            </LinearLayout>

            <!-- Payment Info Section -->
            <LinearLayout
                android:id="@+id/payment_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_rounded_card_large"
                android:padding="16dp">

                <!-- Paid With Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textColor="@color/color_text_secondary"
                            android:text="@string/basket_receipt_paid_label" />

                    <TextView
                        android:id="@+id/paid_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/color_primary_green"
                        android:fontFamily="sans-serif-medium"
                        tools:text="₿74,970" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
