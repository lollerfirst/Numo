<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mint_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Mint Icon Container -->
    <FrameLayout
        android:id="@+id/icon_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_accent_light">

        <ImageView
            android:id="@+id/mint_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lightning_bolt"
            android:tint="@color/color_primary"
            android:contentDescription="@string/mint_selection_icon_description" />

    </FrameLayout>

    <!-- Text Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/mint_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mint Name"
            android:textAppearance="@style/Text.Body"
            android:textColor="@color/color_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/mint_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="mint.example.com"
            android:textAppearance="@style/Text.Caption"
            android:textColor="@color/color_text_tertiary"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Balance -->
    <TextView
        android:id="@+id/balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¿1,234"
        android:textAppearance="@style/Text.Body"
        android:textColor="@color/color_success_green"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp" />

    <!-- Chevron -->
    <ImageView
        android:id="@+id/chevron"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="@color/color_text_tertiary"
        android:contentDescription="@string/mint_selection_select_description" />

</LinearLayout>
