<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white"
    tools:context=".ModernPOSActivity">

    <!-- Amount Display - Large centered -->
    <TextView
        android:id="@+id/amount_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_screen_horizontal"
        android:layout_marginTop="@dimen/space_5xl"
        android:layout_marginEnd="@dimen/space_s"
        android:gravity="center"
        android:text="â‚¿ 0"
        android:textAppearance="@style/Text.DisplayAmount"
        app:layout_constraintEnd_toStartOf="@id/currency_switch_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Currency Switch Button -->
    <ImageButton
        android:id="@+id/currency_switch_button"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:layout_marginTop="@dimen/space_5xl"
        android:layout_marginEnd="@dimen/margin_screen_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Switch between Sats and USD"
        android:src="@drawable/ic_switch_currency"
        android:tint="@color/color_text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fiat Amount Display - Secondary text below main amount -->
    <TextView
        android:id="@+id/fiat_amount_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_screen_horizontal"
        android:layout_marginTop="@dimen/space_s"
        android:layout_marginEnd="@dimen/margin_screen_horizontal"
        android:gravity="center"
        android:text="$0.00 USD"
        android:textAppearance="@style/Text.Body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_display" />

    <!-- Input Mode Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_mode_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fiat_amount_display">

        <!-- Numeric Keypad - Cash App Style -->
        <GridLayout
            android:id="@+id/keypad"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_screen_horizontal"
            android:layout_marginTop="@dimen/space_4xl"
            android:layout_marginBottom="@dimen/space_l"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="false"
            app:layout_constraintBottom_toTopOf="@id/submit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Charge Button - Green Pill -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginHorizontal="@dimen/margin_screen_horizontal"
            android:layout_marginBottom="@dimen/space_xl"
            android:background="@drawable/bg_button_primary_green"
            android:enabled="false"
            android:text="Charge"
            android:textAppearance="@style/Text.Button"
            android:textColor="@color/color_bg_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Token Display Container with Fixed Height -->
    <FrameLayout
        android:id="@+id/token_scroll_container"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin_screen_horizontal"
        android:background="@color/color_bg_white"
        android:elevation="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fiat_amount_display">

        <!-- Fixed height text view with ellipsize to handle text overflow -->
        <TextView
            android:id="@+id/token_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:fontFamily="monospace"
            android:gravity="start"
            android:maxLines="4"
            android:padding="@dimen/space_l"
            android:textColor="@color/color_text_primary"
            android:textSize="16sp" />

    </FrameLayout>

    <!-- Token Action Buttons Container -->
    <LinearLayout
        android:id="@+id/token_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_screen_horizontal"
        android:layout_marginTop="@dimen/space_l"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/token_scroll_container">

        <!-- Open With Button -->
        <Button
            android:id="@+id/open_with_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/bg_button_secondary_outlined"
            android:drawablePadding="@dimen/space_s"
            android:drawableStart="@drawable/ic_open_with"
            android:text="Open With"
            android:textAppearance="@style/Text.Button"
            android:textColor="@color/color_text_primary" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/space_l"
            android:background="@drawable/bg_button_secondary_outlined"
            android:text="New Transaction"
            android:textAppearance="@style/Text.Button"
            android:textColor="@color/color_text_primary" />

    </LinearLayout>

    <!-- Bottom Navigation - Cash App Style -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Top Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_divider" />

        <!-- Navigation Icons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- More Options -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/action_more_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="More Options"
                    android:padding="@dimen/space_l"
                    android:src="@drawable/ic_more_vert"
                    android:tint="@color/color_text_secondary" />
            </LinearLayout>

            <!-- History -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/action_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Transaction History"
                    android:padding="@dimen/space_l"
                    android:src="@drawable/ic_history"
                    android:tint="@color/color_text_secondary" />
            </LinearLayout>

            <!-- Catalog -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/action_catalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Item Catalog"
                    android:padding="@dimen/space_l"
                    android:src="@drawable/ic_catalog"
                    android:tint="@color/color_text_secondary" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/action_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Settings"
                    android:padding="@dimen/space_l"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/color_text_secondary" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
