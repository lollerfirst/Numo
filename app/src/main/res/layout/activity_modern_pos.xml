<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_green"
    tools:context=".ModernPOSActivity">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Catalog (Item List) -->
        <ImageButton
            android:id="@+id/action_catalog"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/pos_nav_catalog_content_description"
            android:src="@drawable/ic_catalog"
            app:tint="@color/color_bg_white" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- History -->
        <ImageButton
            android:id="@+id/action_history"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/pos_nav_history_content_description"
            android:src="@drawable/ic_history"
            app:tint="@color/color_bg_white" />

        <!-- Settings -->
        <ImageButton
            android:id="@+id/action_settings"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/pos_nav_settings_content_description"
            android:src="@drawable/ic_settings"
            app:tint="@color/color_bg_white" />

        <!-- More Options (Hidden) -->
        <ImageButton
            android:id="@+id/action_more_options"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/pos_nav_more_options_content_description"
            android:src="@drawable/ic_more_vert"
            android:visibility="gone"
            app:tint="@color/color_bg_white" />

    </LinearLayout>

    <!-- Input Mode Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_mode_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_navigation">

        <!-- Upper content (amount + currency) - dynamically sized -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upper_content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/keypad"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Error Message (initially hidden) -->
            <TextView
                android:id="@+id/error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/pos_error_amount_required"
            android:textColor="@color/color_bg_white"
            android:textSize="16sp"
            android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Amount Display -->
            <TextView
                android:id="@+id/amount_display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/pos_amount_placeholder_main"
            android:textColor="@color/color_bg_white"
            android:textSize="64sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="none"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="24sp"
                android:autoSizeMaxTextSize="64sp"
                android:autoSizeStepGranularity="2sp"
                app:layout_constraintBottom_toTopOf="@+id/secondary_amount_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/error_message"
                app:layout_constraintVertical_chainStyle="packed" />

            <!-- Secondary Amount Display with Swap Icon -->
            <LinearLayout
                android:id="@+id/secondary_amount_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amount_display">

                <TextView
                    android:id="@+id/secondary_amount_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pos_amount_placeholder_secondary"
                    android:textColor="@color/color_bg_white"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/currency_switch_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/pos_currency_switch_content_description"
                    android:focusable="false"
                    android:rotation="90"
                    android:scaleX="0.7"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_switch_currency"
                    app:tint="@color/color_bg_white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Keypad with fixed height -->
        <GridLayout
            android:id="@+id/keypad"
            android:layout_width="0dp"
            android:layout_height="360dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="false"
            app:layout_constraintBottom_toTopOf="@+id/submit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Single Charge Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_charge"
            android:text="@string/pos_charge_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Loading spinner overlay for charge button -->
        <ProgressBar
            android:id="@+id/submit_button_spinner"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/color_bg_white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/submit_button"
            app:layout_constraintEnd_toEndOf="@id/submit_button"
            app:layout_constraintStart_toStartOf="@id/submit_button"
            app:layout_constraintTop_toTopOf="@id/submit_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
