<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mint_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/color_bg_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Mint icon avatar with circular clipping -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mint_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="Mint icon"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bitcoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle"
            app:strokeColor="@color/color_bg_white"
            app:strokeWidth="1dp" />

        <!-- Content container - all text aligned to right of icon -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/mint_icon"
            app:layout_constraintEnd_toStartOf="@id/actions_container"
            app:layout_constraintStart_toEndOf="@id/mint_icon"
            app:layout_constraintTop_toTopOf="@id/mint_icon">

            <!-- Top row: Lightning indicator + Mint name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Lightning indicator (radio button) -->
                <RadioButton
                    android:id="@+id/lightning_mint_radio"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:button="@null"
                    android:contentDescription="Select as Lightning mint"
                    android:drawableStart="@drawable/ic_lightning_small"
                    android:drawablePadding="0dp"
                    android:gravity="center" />

                <!-- Mint name -->
                <TextView
                    android:id="@+id/mint_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Minibits" />

            </LinearLayout>

            <!-- Mint URL - aligned with title -->
            <TextView
                android:id="@+id/mint_url_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="28dp"
                android:ellipsize="end"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:textColor="@color/color_text_tertiary"
                android:textSize="11sp"
                tools:text="mint.minibits.cash/Bitcoin" />

        </LinearLayout>

        <!-- Actions container (remove button) -->
        <FrameLayout
            android:id="@+id/actions_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/remove_mint_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Remove mint"
                android:padding="6dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/color_icon_secondary" />

        </FrameLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/color_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mint_icon" />

        <!-- Balance row -->
        <LinearLayout
            android:id="@+id/balance_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mints_settings_balance_label"
                android:textColor="@color/color_text_secondary"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/balance_loading"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mint_balance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="â‚¿21,000" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
