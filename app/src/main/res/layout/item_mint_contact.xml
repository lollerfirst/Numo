<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="20dp">

    <!-- Contact Icon -->
    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_contact_email" />

    <!-- Method -->
    <TextView
        android:id="@+id/contact_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="13sp"
        android:textColor="@color/color_text_secondary"
        android:layout_marginEnd="12dp"
        android:textAllCaps="true"
        android:letterSpacing="0.05" />

    <!-- Info (takes remaining space) -->
    <TextView
        android:id="@+id/contact_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="contact@example.com"
        android:textSize="15sp"
        android:textColor="@color/color_text_primary"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Copy Button -->
    <ImageView
        android:id="@+id/copy_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:src="@drawable/ic_copy"
        app:tint="@color/color_text_tertiary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/mint_details_copy" />

</LinearLayout>
