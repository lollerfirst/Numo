<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Shellshock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textColorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/textColorPrimary</item>
        <!-- Custom attributes -->
        <item name="keypadButtonColor">@color/keypadButtonColor</item>
        <item name="keypadButtonTextColor">@color/keypadButtonTextColor</item>
        <item name="keypadButtonPressedColor">@color/keypadButtonPressedColor</item>
        <item name="inputBoxStrokeColor">@color/inputBoxStrokeColor</item>
    </style>

    <!-- Define custom attributes -->
    <attr name="keypadButtonColor" format="color" />
    <attr name="keypadButtonTextColor" format="color" />
    <attr name="keypadButtonPressedColor" format="color" />
    <attr name="inputBoxStrokeColor" format="color" />
</resources>
