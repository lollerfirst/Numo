<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculator"
                android:textSize="32sp"
                android:textColor="#1D1D1F"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/totalAmountTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amount: $0.00"
                android:textSize="18sp"
                android:textColor="#6E6E73"
                android:gravity="center"
                android:paddingTop="8dp" />

        </LinearLayout>

        <!-- Display Field -->
        <EditText
            android:id="@+id/displayField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#1D1D1F"
            android:hint="Enter amount"
            android:textColorHint="#AEAEB2"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/rounded_edit_text"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:focusable="false"
            android:cursorVisible="false" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/red_button"
                android:elevation="6dp"
                android:padding="16dp"
                android:layout_marginEnd="12dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/enterButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/blue_button"
                android:elevation="6dp"
                android:padding="16dp"
                android:layout_marginStart="12dp"
                android:textAllCaps="false" />

        </LinearLayout>

        <!-- Keyboard Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Integrated Keyboard"
            android:textSize="16sp"
            android:textColor="#6E6E73"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Integrated Keyboard Grid -->
        <GridLayout
            android:id="@+id/keyboardGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="false"
            android:alignmentMode="alignBounds"
            android:layout_marginBottom="32dp">

            <!-- Keyboard buttons will be added programmatically -->

        </GridLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/green_button"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
